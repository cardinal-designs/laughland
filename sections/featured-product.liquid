  "name": "Featured Product",
  "tag": "section",
  "class": "product-section",
  "blocks": [],
  "settings": [
    {
      "type": "product",
      "id": "product",
      "label": "Product"
    },
    {
      "type": "textarea",
      "id": "title",
      "label": "Product Title"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Product Description"
    },
    {
      "type": "text",
      "id": "atc",
      "label": "Add To Cart button",
      "default": "Buy Now"
    },
    {
      "type": "richtext",
      "id": "how_to_use",
      "label": "How to use",
      "info": "Connect product How To Use metafield"
    },
    {
      "type": "number",
      "id": "discounted_price",
      "label": "Discounted Price"
    },
    {
      "type": "text",
      "id": "discount_code",
      "label": "Discount Code"
    },
    {
      "type": "text",
      "id": "discount_text",
      "label": "Discount Text"
    }
    
  ],
  "presets": [
    {
      "name": "Featured Product"
    }
  ]
}
{% endschema %}
